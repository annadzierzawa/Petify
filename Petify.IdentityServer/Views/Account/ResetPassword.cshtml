@using Microsoft.AspNetCore.Mvc.Localization
@model Petify.IdentityServer.Models.ResetPasswordViewModel

<div>
    <h1>Reset password</h1>
    <p>Type your new password</p>

    <form asp-action="ResetPassword" autocomplete="off">
        <input asp-for="Code" type="hidden" />
        <div class="form-group">
            <input asp-for="Email" placeholder="Email" class="form-control" autofocus />
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="Password" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
        </div>
        <div class="mt-4 mb-4">
            <button class="btn btn-primary">Reset</button>
        </div>
        <partial name="_ValidationSummary" />
    </form>
</div>
