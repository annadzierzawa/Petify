@using Microsoft.AspNetCore.Mvc.Localization
@model Petify.IdentityServer.Models.ResetPasswordViewModel
@inject IViewLocalizer Localizer

<div class="info-screen">
    <div class="info-screen-container card-container">
        <h1 class="header">@Localizer["Reset password"]</h1>
        <p class="sub-header">@Localizer["Type your new password"]</p>

        <form asp-action="ResetPassword" autocomplete="off">
            <input asp-for="Code" type="hidden" />
            <div class="form-group">
                <input asp-for="Email" placeholder="@Localizer["Email"]" class="form-control" autofocus />
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="@Localizer["Password"]" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="@Localizer["Confirm Password"]" class="form-control" />
            </div>
            <div class="mt-4 mb-4">
                <button class="btn btn-primary btn-custom">@Localizer["Reset"]</button>
            </div>
            <partial name="_ValidationSummary" />
        </form>
    </div>
</div>
